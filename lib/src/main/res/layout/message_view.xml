<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp">

    <LinearLayout
        android:id="@+id/wrap_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/layout_message_border"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/title_text_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tittle message"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/desc_text_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Descriptions messages bla vla vla vla"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <com.ahmadrosid.lib.TriangleView
        android:id="@+id/left"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:textSize="10sp"/>

    <com.ahmadrosid.lib.TriangleView
        android:visibility="invisible"
        android:id="@+id/right"
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="2dp"
        android:textSize="10sp"/>

    <LinearLayout
        android:id="@+id/wrap_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/layout_message_no_border"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:id="@+id/title_text_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tittle message"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/decs_text_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Descriptions messages bla vla vla vla"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>
